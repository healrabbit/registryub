<div class="sort-controls">
  <label for="sort-category">Sort by:</label>
  <select id="sort-category">
    <option value="name">Name</option>
    <option value="birthdate">Age</option>
    <option value="trial">Trial</option>
    <option value="region">Region</option>
  </select>

  <label for="sort-order">Order:</label>
  <select id="sort-order">
    <option value="asc">Ascending</option>
    <option value="desc">Descending</option>
  </select>
</div>

<ul id="record-list">
  {% for profile in collections.all %}
    {% if profile.data.status == "Active" %}
      <li 
        data-name="{{ profile.data.name | lower }}"
        data-trial="{{ profile.data.trial }}"
        data-birthdate="{{ profile.data.birthdate }}"
        data-region="{{ profile.data.region }}"
      >
        <a href="{{ profile.url }}">
          {{ profile.data.name }} — {{ profile.data.birthdate }} — Trial {{ profile.data.trial }} — Region {{ profile.data.region }}
        </a>
      </li>
    {% endif %}
  {% endfor %}
</ul>




