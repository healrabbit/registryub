<script>
const list = document.getElementById('record-list');
const sortCategory = document.getElementById('sort-category');
const sortOrder = document.getElementById('sort-order');

function sortRecords() {
  const key = sortCategory.value;
  const order = sortOrder.value;
  const items = Array.from(list.querySelectorAll('li'));

  items.sort((a, b) => {
    let aValue = a.dataset[key];
    let bValue = b.dataset[key];

    // Numbers
    if (key === 'trial' || key === 'region') {
      aValue = Number(aValue);
      bValue = Number(bValue);
    }

    // Dates
    if (key === 'birthdate') {
      aValue = new Date(aValue);
      bValue = new Date(bValue);
    }

    // Strings
    if (typeof aValue === 'string') {
      aValue = aValue.toLowerCase();
      bValue = bValue.toLowerCase();
    }

    if (aValue < bValue) return order === 'asc' ? -1 : 1;
    if (aValue > bValue) return order === 'asc' ? 1 : -1;
    return 0;
  });

  items.forEach(item => list.appendChild(item));
}


sortCategory.addEventListener('change', sortRecords);
sortOrder.addEventListener('change', sortRecords);
</script>

</body>
